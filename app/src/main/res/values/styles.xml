<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/minimum</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">"@drawable/ic_ripple_effect"</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_main</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_main_buttons</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/start_padding_settings_menu_items</item>
        <item name="android:paddingTop">@dimen/vertical_padding_settings_menu_items</item>
        <item name="android:paddingBottom">@dimen/vertical_padding_settings_menu_items</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="drawableTint">@color/settings_icons</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ThemeSwitchTextStyle">
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="SearchScreenSupportButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:letterSpacing">@dimen/zero_letter_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/size_10</item>
        <item name="android:paddingBottom">@dimen/size_10</item>
        <item name="android:paddingStart">@dimen/size_14</item>
        <item name="android:paddingEnd">@dimen/size_14</item>
        <item name="android:textColor">@color/white_light_black_night</item>
        <item name="android:textSize">@dimen/support_search_buttons_text_size</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/support_search_buttons_corner_radius</item>
    </style>

    <style name="MediaSubtitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/media_subtitles_text_size</item>
        <item name="android:layout_marginBottom">@dimen/size_16</item>
        <item name="fontWeight">@dimen/font_weight_settings</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MediaFeatures">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/black_light_white_night</item>
        <item name="android:textSize">@dimen/media_subtitles_text_size</item>
        <item name="android:layout_marginBottom">@dimen/size_16</item>
        <item name="fontWeight">@dimen/font_weight_settings</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/support_search_buttons_text_size</item>
    </style>

    <style name="PlaylistCardViewText">
        <item name="android:textSize">@dimen/pl_card_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/media_play_button</item>
        <item name="android:gravity">start</item>
        <item name="fontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackName_TrackCardVIew">
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <!-- Dialog -->
    <style name="AppTheme_MyMaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">
            @style/AppTheme.MyMaterialAlertDialog.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/AppTheme.MyMaterialAlertDialog.Body.Text
        </item>

        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.MyMaterialAlertDialog.Button
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.MyMaterialAlertDialog.Button
        </item>
    </style>

    <style name="AppTheme.MyMaterialAlertDialog.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">

    </style>

    <style name="AppTheme.MyMaterialAlertDialog.Body.Text" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="AppTheme.MyMaterialAlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <!-- Dialog Ends -->

    <style name="FloatingHintStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/pl_card_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="boxStrokeColor">@color/pl_creation_edit_text</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_view_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_view_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_view_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_view_radius</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
    </style>

</resources>