<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="linearLayoutPl">
        <item name="android:background">@color/color_main_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settingSettingText">
        <item name="android:textColor">@color/color_setting_text</item>
    </style>

    <style name="settingButtonBack">
        <item name="iconTint">@color/color_setting_text</item>
    </style>

    <style name="switchTheme">
        <item name="android:thumbTint">@color/color_image</item>
        <item name="android:trackTint">@color/color_switch_trackTint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="mainButtonStyle"  parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textColor">@color/color_text_and_ic_button</item>
        <item name="android:textSize">@dimen/pl_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/pl_layout_marginBottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/pl_cornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/pl_iconPadding</item>
        <item name="iconTint">@color/color_text_and_ic_button</item>
    </style>
    
    <style name="settingFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/setting_inner_top_padding</item>
        <item name="android:paddingBottom">@dimen/setting_inner_bottom_padding</item>
    </style>
    
    <style name="settingText">
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">@dimen/setting_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_setting_text</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
    </style>
    
    <style name="settingIconImage">
        <item name="android:drawableTint">@color/color_image</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>
</resources>