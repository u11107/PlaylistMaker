<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/PlaceHolderLayoutStyle">

        <Button
            android:id="@+id/btNewPlaylist"
            style="@style/NewPlaylistStyle"
            android:layout_marginBottom="@dimen/xxlarge_margin"
            android:text="@string/button_new_playlist"/>

        <TextView
            style="@style/PlaceHolderTextViewStyle"
            android:text="@string/playlists_empty"
            app:drawableTopCompat="@drawable/ic_ph_empty" />
    </LinearLayout>
</FrameLayout>