<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/small_medium_margin"
    android:layout_marginVertical="@dimen/medium_margin"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPlaylistGridItem"
        style="@style/PlaylistGridItemImageView"
        android:background="@drawable/bg_playlist_image"
        android:src="@drawable/ic_playlist"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPlaylistGridItemName"
        style="@style/PlaylistGridItemTextStyle"
        android:layout_marginTop="@dimen/small_margin"
        tools:text="Название"
        app:layout_constraintTop_toBottomOf="@id/ivPlaylistGridItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPlaylistGridItemTrackInfo"
        style="@style/PlaylistGridItemTextStyle"
        tools:text="0 треков"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistGridItemName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>