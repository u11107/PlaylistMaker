<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".media.ui.fragment.FavouriteTracksFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favouriteTracksRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16"
        android:layout_marginTop="@dimen/marginTop_16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/track_v" />

    <TextView
        android:id="@+id/nothingFound"
        style="@style/placeholder_not_found"
        android:layout_marginTop="120dp"
        android:text="@string/media_empty"
        android:visibility="visible"
         />
</FrameLayout>