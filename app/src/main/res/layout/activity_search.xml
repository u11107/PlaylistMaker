<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/search_const"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/searchBtBack"
            style="@style/settingButtonBack"
            android:background="@android:color/transparent"
            app:icon="@drawable/arrow_back"
            app:iconGravity="textStart" />

        <TextView style="@style/settingSettingText" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        style="@style/searchEditTextLinearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">


        <EditText
            android:id="@+id/searchEditText"
            style="@style/searchEditText"
            android:background="@drawable/backgraund_radius_edittext"
            android:drawableStart="@drawable/search_textedit_ic"
            android:hint="@string/search_text_edit"
            android:imeOptions="actionDone"
            android:singleLine="true"
            tools:ignore="Autofill" />

        <ImageView
            android:id="@+id/clearBt"
            style="@style/searchIcCloseEditText"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="124dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recView"
            style="@style/recycler"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

        <LinearLayout
            android:id="@+id/placeholderMessage"
            style="@style/searchAct_placeholderMessage"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/noConnection"
                style="@style/searchAct_noConnection"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/nothingFoundImage"
                style="@style/searchAct_nothingFoundImage"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvError"
                style="@style/searchAct_tvError"
                tools:targetApi="p" />

            <Button
                android:id="@+id/buttonUpdate"
                style="@style/searchAct_BtUpdate"
                android:visibility="gone"
                app:cornerRadius="54dp" />
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>